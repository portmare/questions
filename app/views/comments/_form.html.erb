<%= form_for([@answer.question, @answer, @comment]) do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'control-label' %>
    <%= f.text_field :body, class: 'form-control', autofocus: true, placeholder: 'Предложить правку' %>
  </div>

  <div class="form-group">
    <%= f.submit(@comment.new_record? ? "Предложить правку" : "Принять правку", class: 'btn btn-info') %>
  </div>
<% end %>