<%= form_for([@question, @answer], remote: true, html: { id: "add_answer_form_#{@question.id}" }) do |f| %>
  <%= render 'shared/errors', object: @answer %>

  <div class="form-group">
    <%= f.label :body, class: 'control-label' %>
    <%= f.text_field :body, class: 'form-control', autofocus: true, placeholder: 'Дать ответ' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Дать ответ', class: 'btn btn-info' %>
  </div>
<% end %>