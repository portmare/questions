<% if object.errors.full_messages.present? %>
  <div class="alert alert-danger" role="error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
