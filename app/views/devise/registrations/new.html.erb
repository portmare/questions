<% content_for :title do %>
  Регистрация
<% end %>

<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Имя', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'control-label' %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Электронная почта' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Пароль' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'control-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Подтвердите пароль' %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: 'btn btn-default' %>
  </div>
<% end %>
